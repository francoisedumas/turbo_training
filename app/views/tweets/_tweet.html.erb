<div class="card card-body" id="<%= dom_id tweet %>">
  <div><%= tweet.body %></div>

  <div class="mt-2">
    <%= link_to "Likes (#{tweet.likes_count})", tweet_like_path(tweet), method: :post %>
    <%= link_to "Retweets (#{tweet.retweets_count})", tweet_retweet_path(tweet), method: :post %>
  </div>
</div>
